#
# Global settings
#
#global.logfile=/root/data/log/3/chunkserver.log
global.ip=127.0.0.1
global.port=9071
global.chunk_size=16777216
global.meta_page_size=4096

#
# MDS settings
#
mds.listen.addr=127.0.0.1:6666
mds.register_retries=100
mds.register_timeout=1000
mds.heartbeat_interval=15
mds.heartbeat_timeout=5000

#
# Chunkserver settings
#
chunkserver.stor_uri=local://./9071/
chunkserver.meta_uri=local://./9071/chunkserver.dat
chunkserver.disk_type=nvme
chunkserver.snapshot_throttle_throughput_bytes=41943040
chunkserver.snapshot_throttle_check_cycles=4

#
# Testing purpose settings
#
test.create_testcopyset=false
test.testcopyset_poolid=666
test.testcopyset_copysetid=888888
test.testcopyset_conf=127.0.0.1:8200:0,127.0.0.1:8201:0,127.0.0.1:8202:0

#
# Copyset settings
#
copyset.check_term=true
copyset.disable_cli=false
copyset.log_applied_task=false
copyset.election_timeout_ms=2000
copyset.snapshot_interval_s=10
copyset.catchup_margin=250
copyset.chunk_data_uri=local://./9071/copysets
copyset.raft_log_uri=local://./9071/copysets
copyset.raft_meta_uri=local://./9071/copysets
copyset.raft_snapshot_uri=local://./9071/copysets
copyset.recycler_uri=local://./9071/recycler
copyset.max_inflight_requests=5000

#
# Clone settings
#
# 禁止使用curveclient
clone.disable_curve_client=true
# 禁止使用s3adapter
clone.disable_s3_adapter=true
clone.slice_size=1048576
clone.thread_num=10
clone.queue_depth=100
curve.root_username=root
curve.root_password=
curve.config_path=conf/client.conf
s3.config_path=conf/s3.conf

#
# Local FileSystem settings
#
# 是否开启使用renameat2，ext4内核3.15以后开始支持
fs.enable_renameat2=true

#
# metrics settings
# true means on, false means off
#
metric.onoff=true

#
# Storage engine settings
#
storeng.sync_write=false

#
# QoS settings
#

#
# Concurrent apply module
#
concurrentapply.size=10
concurrentapply.queuedepth=1

#
# Chunkfile pool
#
chunkfilepool.enable_get_chunk_from_pool=false
chunkfilepool.chunk_file_pool_dir=./9071/chunkfilepool/
chunkfilepool.meta_path=./9071/chunkfilepool.meta
chunkfilepool.cpmeta_file_size=4096
chunkfilepool.retry_times=5

#
# trash settings
#
trash.expire_afterSec=86400
trash.scan_periodSec=3600
